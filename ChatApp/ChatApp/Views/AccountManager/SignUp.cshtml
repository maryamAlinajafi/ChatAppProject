        <div class="col-md-4">
            <br />
            <br />
            <br />

            <br />
            <br />
            <br />


            <img src="~/UserProfileImage/Profile.png" id="previewImage" width="200" height="200" />
            <hr />
            <div id="removeParent" hidden><input type="button" id="btnRemoveProfile" value="Remove Image" class="btn btn-xs btn-danger" /></div>
            <br />
            <form runat="server">
                <input type="file" name="ImageFile" id="imgInp" />
            </form>
            <div style="background-color:aqua">
