
@{
    ViewBag.Title = "Chat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Chat</h2>
<div class="container">
    <input type="text" id="name" class="form-control col-md-6"/>
    <input type="text" id="message" class="form-control col-md-6"/>
    <input type="button" id="sendmessage" value="Send" class="btn btn-success"/>
    
    <ul id="discussion">
    </ul>
    <div id="msgShow" style="border:double;background-color:darkgray;width:500px;height:500px;" >

    </div>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    @*   <script src="~/Scripts/jquery-3.3.1.min.js"></script>*@
    @*<script src="~/Scripts/jquery.signalR-2.1.0.min.js"></script>*@
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>

        $(document).ready(function () {
                            console.log('hi')
             var chat = $.connection.chatHub;
           
          
            // Set initial focus to message input box.
            $('#message').focus();


            // Create a function that the hub can call back to display messages.
           chat.client.addNewMessageToPage = function (name, message) {
                // Add the message to the page.
                let msgString =
                   '<br/><b>' + name + ' : </b>' + message
               $('#msgShow').append(msgString);
            };

            // Start the connection.
          $.connection.hub.start()
            .done(function () {

                console.log($.connection.hub.id)

                $('#sendmessage').click(function () {

                    let name = "@HttpContext.Current.User.Identity.Name"
                    let message = $('#message').val()
                       
                    //save message to DB
                $.ajax({  
                    type: "GET",
                    url: "/Messages/addMessage?msgText=" + message + "&classId=" +"@ViewBag.classId",
                    data: JSON.stringify(message),  
                    //dataType: "json"  ,
                    contentType: 'application/json; charset=utf-8',  
                    error: function () {
                        alert("System is Busy! Try Later");
                       
                    },
                    success: function (response) {
                        if (response) {
                            // Call the Send method on the hub.
                            chat.server.send(name, message);
                            // Clear text box and reset focus for next comment.
                            $('#message').val('').focus();
                        }
                        else
                            alert("Not Send!Try again")
                    }
                });  

                    
                });
               
            });

        })

         

        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}
