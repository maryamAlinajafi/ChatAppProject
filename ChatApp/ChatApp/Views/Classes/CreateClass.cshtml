    <div class="form-group">
        @Html.LabelFor(model => model.AccessCode, htmlAttributes: new { @class = "control-label col-md-2 necessaryField" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AccessCode, new { htmlAttributes = new { @class = "form-control col-md-2" } })
            <br />
            <div>
                @Html.ValidationMessageFor(model => model.AccessCode, "", new { @class = "text-danger col-md-11" })

            </div>
        </div>
