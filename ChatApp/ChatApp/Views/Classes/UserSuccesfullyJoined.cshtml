@{
    int ClassIdretrive = @ViewBag.ClassId;
}


<div class="jumbotron">
    <hr />

    <div>

        <h2>
            Dear @ViewBag.StudentName
        </h2>
        <h2> @ViewBag.classname</h2>
        <h3>    @Resources.ClassRF.Welcome_msg  !></h3>

        <h5>@Resources.ClassRF.lastMemberCount :  @ViewBag.nth  :)</h5>


    </div>

    <hr />
    <hr />

    <div class="row">
        <div class="col-md-5">
            @Html.ActionLink(@Resources.ClassRF.OpenClass, "MyClass", new { classID = ClassIdretrive }, new { @class = "btn btn-success col-md-5" })

        </div>

        <div class="col-md-5" style="align-items:center">
            <p><a class="btn btn-success col-md-5" href="https://localhost:44355/Classes/MyClasses">@Resources.ClassRF.MyClasses</a></p>
        </div>

    </div>



</div>

